<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#CADEE8"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <TextView
                android:id="@+id/tutor_hub_title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/andada"
                android:text="Student Hub"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#0088C8"
                android:textSize="48sp"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <ImageView
                android:id="@+id/student_homescreen_image"
                android:layout_width="320dp"
                android:layout_height="320dp"
                app:srcCompat="@drawable/gradcap_diploma" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <Button
                android:id="@+id/search_button"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:fontFamily="@font/andada"
                android:textStyle="bold"
                android:textSize="30sp"
                android:paddingLeft="20dp"
                android:paddingRight="55dp"
                android:background="@drawable/rounded_button"
                android:drawableStart="@drawable/formatted_magnifying_glass"
                android:text="Search" />


            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <Button
                android:id="@+id/purchase_request_button"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:fontFamily="@font/andada"
                android:textStyle="bold"
                android:textSize="30sp"
                android:background="@drawable/rounded_button4"
                android:text="My Purchase Requests" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <Button
                android:id="@+id/approved_button"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:fontFamily="@font/andada"
                android:textStyle="bold"
                android:textSize="25sp"
                android:paddingLeft="20dp"
                android:paddingRight="55dp"
                android:background="@drawable/rounded_button2"
                android:drawableStart="@drawable/formatted_checkmark"
                android:text="Approved Lessons" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <Button
                android:id="@+id/logoff_button"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:fontFamily="@font/andada"
                android:textStyle="bold"
                android:textSize="25sp"
                android:background="@drawable/rounded_button3"
                android:text="Log Out" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>