<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#CADEE8"
    android:layout_height="match_parent"
    tools:context=".GUI.ADMIN_interfaces.AdminInboxActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/purchase_request_title"
            android:fontFamily="@font/andada"
            android:textColor="@color/tutronBluePrimary"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="34sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PURCHASE REQUESTS" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <TextView
            android:id="@+id/purchase_request_desc"
            android:fontFamily="@font/andada"
            android:gravity="center"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#638FA3"
            android:text="Requests Pending Decision" />


        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/purchase_request_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/home_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        app:srcCompat="@drawable/white_house"/>

</androidx.constraintlayout.widget.ConstraintLayout>