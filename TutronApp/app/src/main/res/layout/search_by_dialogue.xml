<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="340dp"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:background="@drawable/rounded_linear_layout3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/search_by_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="SEARCH BY"
            android:textColor="#0088C8"
            android:fontFamily="@font/andada"
            android:textSize="36sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/search_by_tutorBtn"
                android:layout_width="280dp"
                android:layout_height="60dp"
                android:fontFamily="@font/andada"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_button"
                android:text="TUTOR" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <Button
                android:id="@+id/search_by_languageBtn"
                android:layout_width="280dp"
                android:layout_height="60dp"
                android:fontFamily="@font/andada"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_button"
                android:text="Native Language" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <Button
                android:id="@+id/search_by_TopicBtn"
                android:layout_width="280dp"
                android:layout_height="60dp"
                android:fontFamily="@font/andada"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_button"
                android:text="Topic" />


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>