<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C8C8C8"
    tools:context=".GUI.LoginPageActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <Space
                android:layout_width="match_parent"
                android:layout_height="25dp" />

            <TextView
                android:id="@+id/update_topic_title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/andada"
                android:text="Update Topic"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#0088C8"
                android:textSize="36sp"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                />



            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />


            <TextView
                android:id="@+id/topic_name_text"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/andada"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#000000"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:text="Topic Name" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <EditText
                android:id="@+id/topic_name_input"
                android:layout_width="375dp"
                android:layout_height="50dp"
                android:ems="10"
                android:textStyle="italic"
                android:background="@drawable/signup_input"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:fontFamily="@font/andada"
                android:hint="Topic Name"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/years_of_experience_text"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/andada"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#000000"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:text="Years of Experience" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <EditText
                android:id="@+id/years_of_experience_input"
                android:layout_width="375dp"
                android:layout_height="50dp"
                android:ems="10"
                android:textStyle="italic"
                android:paddingLeft="2mm"
                android:inputType="number"
                android:maxLength="2"
                android:background="@drawable/signup_input"
                android:hint="##"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/description_experience_text"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/andada"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#000000"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:text="@string/description_string"  />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <EditText
                android:id="@+id/description_experience_input"
                android:layout_width="370dp"
                android:layout_height="200dp"
                android:ems="10"
                android:textStyle="italic"
                android:fontFamily="@font/andada"
                android:paddingLeft="2mm"
                android:paddingVertical="1mm"
                android:gravity="top|left"
                android:inputType="textMultiLine"
                android:lines="13"
                android:maxLines="50"
                android:minLines="1"
                android:maxLength="500"
                android:scrollbars="vertical"
                android:background="@drawable/signup_input"
                android:hint="Add a brief description on your experience of this topic.  (Max 500 Characters)" />



            <Space
                android:layout_width="match_parent"
                android:layout_height="25dp" />

            <Button
                android:id="@+id/update_topic_button"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@drawable/rounded_button"
                android:fontFamily="@font/andada"
                android:textStyle="bold"
                android:textSize="28dp"
                android:textColor="#FFFFFF"
                android:text="Update" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="25dp" />

            <Button
                android:id="@+id/remove_topic_button"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@drawable/rounded_button2"
                android:fontFamily="@font/andada"
                android:textStyle="bold"
                android:textSize="28dp"
                android:textColor="#000000"
                android:text="Delete" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>