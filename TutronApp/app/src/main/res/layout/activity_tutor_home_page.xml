<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#CADEE8"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/tutor_hub_title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/andada"
            android:text="Tutor Hub"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="#0088C8"
            android:textSize="48sp"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <ImageView
            android:id="@+id/tutor_homescreen_image"
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:srcCompat="@drawable/tutor_homescreen" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rating_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/andada"
                android:textStyle="bold"
                android:textSize="36sp"
                android:text="My Rating: " />

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:numStars="5"
                android:progressTint="#FFD364"
                android:rating="2.5" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/total_lessons_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/andada"
                android:textSize="25sp"
                android:textStyle="bold"
                android:text="Total Lessons Given: " />


            <TextView
                android:id="@+id/total_lessons_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/andada"
                android:textSize="25sp"
                android:textStyle="bold"
                android:gravity="right"
                android:text="0" />
        </LinearLayout>


        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <Button
            android:id="@+id/my_topics_button"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:fontFamily="@font/andada"
            android:textStyle="bold"
            android:textSize="30sp"
            android:background="@drawable/rounded_button2"
            android:text="My Topics" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:fontFamily="@font/andada"
            android:textStyle="bold"
            android:textSize="30sp"
            android:background="@drawable/rounded_button2"
            android:text="Purchase Requests" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>